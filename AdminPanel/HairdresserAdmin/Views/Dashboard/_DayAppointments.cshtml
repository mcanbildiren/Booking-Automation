@model IEnumerable<HairdresserAdmin.Models.ViewModels.AppointmentViewModel>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th width="15%">Saat</th>
                    <th width="20%">Çalışan</th>
                    <th width="25%">Müşteri</th>
                    <th width="15%">Durum</th>
                    <th width="25%">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appointment in Model)
                {
                    <tr>
                        <td>
                            <strong><i class="bi bi-clock"></i> @appointment.Time</strong>
                        </td>
                        <td>
                            <span class="badge bg-secondary">@appointment.WorkerName</span>
                        </td>
                        <td>
                            <div><i class="bi bi-person"></i> @appointment.CustomerName</div>
                            <small class="text-muted"><i class="bi bi-telephone"></i>+@appointment.PhoneNumber</small>
                        </td>
                        <td>
                            <span class="@appointment.StatusBadgeClass">
                                @appointment.StatusText
                            </span>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <button type="button" class="btn btn-outline-success" onclick="updateStatus(@appointment.Id, 'confirmed')">
                                    <i class="bi bi-check"></i>
                                </button>
                                <button type="button" class="btn btn-outline-danger" onclick="updateStatus(@appointment.Id, 'cancelled')">
                                    <i class="bi bi-x"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info text-center mb-0">
        <i class="bi bi-info-circle"></i> Bu tarihte randevu bulunmamaktadır.
    </div>
}

