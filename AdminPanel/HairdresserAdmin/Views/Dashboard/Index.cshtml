@model DashboardViewModel
@{
    ViewData["Title"] = "Randevular";
    var prevMonth = Model.CurrentMonth == 1 ? 12 : Model.CurrentMonth - 1;
    var prevYear = Model.CurrentMonth == 1 ? Model.CurrentYear - 1 : Model.CurrentYear;
    var nextMonth = Model.CurrentMonth == 12 ? 1 : Model.CurrentMonth + 1;
    var nextYear = Model.CurrentMonth == 12 ? Model.CurrentYear + 1 : Model.CurrentYear;
}

<div class="row mb-4">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center">
            <h2>
                <i class="bi bi-calendar-check"></i> Randevular
            </h2>
            <div class="d-flex gap-2 align-items-center">
                <select id="workerFilter" class="form-select" style="width: 200px;" onchange="filterByWorker()">
                    <option value="">Tüm Çalışanlar</option>
                    @foreach (var worker in Model.Workers)
                    {
                        if (Model.SelectedWorkerId == worker.Id)
                        {
                            <option value="@worker.Id" selected>@worker.Name</option>
                        }
                        else
                        {
                            <option value="@worker.Id">@worker.Name</option>
                        }
                    }
                </select>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-calendar-today"></i> Bugün
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center border-primary">
            <div class="card-body">
                <h3 class="text-primary">@Model.TotalAppointments</h3>
                <p class="mb-0">Toplam Randevu</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center border-success">
            <div class="card-body">
                <h3 class="text-success">@Model.ConfirmedAppointments</h3>
                <p class="mb-0">Onaylandı</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center border-warning">
            <div class="card-body">
                <h3 class="text-warning">@Model.PendingAppointments</h3>
                <p class="mb-0">Bekliyor</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center border-danger">
            <div class="card-body">
                <h3 class="text-danger">@Model.CancelledAppointments</h3>
                <p class="mb-0">İptal</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Calendar -->
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <a href="@Url.Action("Index", new { month = prevMonth, year = prevYear, date = Model.SelectedDate.ToString("yyyy-MM-dd"), workerId = Model.SelectedWorkerId })" 
                       class="btn btn-sm btn-light">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                    <h5 class="mb-0">@Model.MonthName @Model.CurrentYear</h5>
                    <a href="@Url.Action("Index", new { month = nextMonth, year = nextYear, date = Model.SelectedDate.ToString("yyyy-MM-dd"), workerId = Model.SelectedWorkerId })" 
                       class="btn btn-sm btn-light">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </div>
            </div>
            <div class="card-body p-2">
                <table class="table table-sm table-bordered mb-0 calendar-table">
                    <thead>
                        <tr class="text-center">
                            <th>Pzt</th>
                            <th>Sal</th>
                            <th>Çar</th>
                            <th>Per</th>
                            <th>Cum</th>
                            <th>Cmt</th>
                            <th>Paz</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int week = 0; week < 6; week++)
                        {
                            <tr>
                                @for (int day = 0; day < 7; day++)
                                {
                                    var index = week * 7 + day;
                                    var calDay = Model.CalendarDays[index];
                                    var cellClass = "";
                                    if (!calDay.IsCurrentMonth) cellClass += " text-muted";
                                    if (calDay.IsToday) cellClass += " bg-warning";
                                    if (calDay.IsSelected) cellClass += " bg-primary text-white";
                                    
                                    <td class="text-center calendar-day @cellClass">
                                        <a href="@Url.Action("Index", new { date = calDay.Date.ToString("yyyy-MM-dd"), month = Model.CurrentMonth, year = Model.CurrentYear, workerId = Model.SelectedWorkerId })" 
                                           class="text-decoration-none @(calDay.IsSelected ? "text-white" : (calDay.IsCurrentMonth ? "text-dark" : "text-muted"))">
                                            @calDay.Day
                                            @if (calDay.AppointmentCount > 0)
                                            {
                                                <span class="badge bg-danger badge-sm" style="font-size: 0.6rem; position: absolute; top: 2px; right: 2px;">@calDay.AppointmentCount</span>
                                            }
                                        </a>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Appointments List -->
    <div class="col-md-8">
        @if (Model.Appointments.Any())
        {
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-list-check"></i> 
                        @Model.SelectedDate.ToString("dd MMMM yyyy, dddd", new System.Globalization.CultureInfo("tr-TR"))
                        @if (Model.SelectedWorkerId.HasValue)
                        {
                            var selectedWorker = Model.Workers.FirstOrDefault(w => w.Id == Model.SelectedWorkerId);
                            if (selectedWorker != null)
                            {
                                <span class="badge bg-light text-dark ms-2">@selectedWorker.Name</span>
                            }
                        }
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th width="10%">Saat</th>
                                    <th width="15%">Çalışan</th>
                                    <th width="18%">Müşteri</th>
                                    <th width="15%">Telefon</th>
                                    <th width="12%">Durum</th>
                                    <th width="18%">Hizmet</th>
                                    <th width="12%">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var appointment in Model.Appointments)
                                {
                                    <tr>
                                        <td>
                                            <strong><i class="bi bi-clock"></i> @appointment.Time</strong>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">@appointment.WorkerName</span>
                                        </td>
                                        <td>
                                            <i class="bi bi-person"></i> @appointment.CustomerName
                                        </td>
                                        <td>
                                            <a href="tel:@appointment.PhoneNumber" class="text-decoration-none">
                                                <i class="bi bi-telephone"></i> @appointment.PhoneNumber
                                            </a>
                                        </td>
                                        <td>
                                            <span class="@appointment.StatusBadgeClass">
                                                @appointment.StatusText
                                            </span>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(appointment.ServiceType))
                                            {
                                                <span>@appointment.ServiceType</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <button type="button" class="btn btn-outline-primary" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#detailsModal@(appointment.Id)">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <button type="button" class="btn btn-outline-secondary dropdown-toggle" 
                                                            data-bs-toggle="dropdown">
                                                        <i class="bi bi-gear"></i>
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li>
                                                            <form method="post" asp-action="UpdateStatus" class="d-inline">
                                                                <input type="hidden" name="id" value="@appointment.Id" />
                                                                <input type="hidden" name="status" value="confirmed" />
                                                                <input type="hidden" name="workerId" value="@Model.SelectedWorkerId" />
                                                                <button type="submit" class="dropdown-item">
                                                                    <i class="bi bi-check-circle text-success"></i> Onayla
                                                                </button>
                                                            </form>
                                                        </li>
                                                        <li>
                                                            <form method="post" asp-action="UpdateStatus" class="d-inline">
                                                                <input type="hidden" name="id" value="@appointment.Id" />
                                                                <input type="hidden" name="status" value="completed" />
                                                                <input type="hidden" name="workerId" value="@Model.SelectedWorkerId" />
                                                                <button type="submit" class="dropdown-item">
                                                                    <i class="bi bi-check-all text-info"></i> Tamamlandı
                                                                </button>
                                                            </form>
                                                        </li>
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li>
                                                            <form method="post" asp-action="UpdateStatus" class="d-inline">
                                                                <input type="hidden" name="id" value="@appointment.Id" />
                                                                <input type="hidden" name="status" value="cancelled" />
                                                                <input type="hidden" name="workerId" value="@Model.SelectedWorkerId" />
                                                                <button type="submit" class="dropdown-item">
                                                                    <i class="bi bi-x-circle text-danger"></i> İptal Et
                                                                </button>
                                                            </form>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>

                                    <!-- Details Modal -->
                                    <div class="modal fade" id="detailsModal@(appointment.Id)" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Randevu Detayları</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <dl class="row">
                                                        <dt class="col-sm-4">Saat:</dt>
                                                        <dd class="col-sm-8">@appointment.Time</dd>

                                                        <dt class="col-sm-4">Çalışan:</dt>
                                                        <dd class="col-sm-8">@appointment.WorkerName</dd>

                                                        <dt class="col-sm-4">Müşteri:</dt>
                                                        <dd class="col-sm-8">@appointment.CustomerName</dd>

                                                        <dt class="col-sm-4">Telefon:</dt>
                                                        <dd class="col-sm-8">@appointment.PhoneNumber</dd>

                                                        <dt class="col-sm-4">Durum:</dt>
                                                        <dd class="col-sm-8">
                                                            <span class="@appointment.StatusBadgeClass">@appointment.StatusText</span>
                                                        </dd>

                                                        <dt class="col-sm-4">Hizmet:</dt>
                                                        <dd class="col-sm-8">@(appointment.ServiceType ?? "-")</dd>

                                                        <dt class="col-sm-4">Süre:</dt>
                                                        <dd class="col-sm-8">@appointment.DurationMinutes dakika</dd>

                                                        @if (!string.IsNullOrEmpty(appointment.Notes))
                                                        {
                                                            <dt class="col-sm-4">Notlar:</dt>
                                                            <dd class="col-sm-8">@appointment.Notes</dd>
                                                        }
                                                    </dl>

                                                    <form method="post" asp-action="UpdateNotes" class="mt-3">
                                                        <input type="hidden" name="id" value="@appointment.Id" />
                                                        <input type="hidden" name="workerId" value="@Model.SelectedWorkerId" />
                                                        <div class="mb-3">
                                                            <label class="form-label">Not Ekle/Güncelle:</label>
                                                            <textarea name="notes" class="form-control" rows="3">@appointment.Notes</textarea>
                                                        </div>
                                                        <button type="submit" class="btn btn-primary btn-sm">
                                                            <i class="bi bi-save"></i> Kaydet
                                                        </button>
                                                    </form>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-body">
                    <div class="alert alert-info text-center mb-0">
                        <i class="bi bi-info-circle"></i> 
                        <strong>@Model.SelectedDate.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))</strong> tarihinde 
                        @if (Model.SelectedWorkerId.HasValue)
                        {
                            var selectedWorker = Model.Workers.FirstOrDefault(w => w.Id == Model.SelectedWorkerId);
                            if (selectedWorker != null)
                            {
                                <text><strong>@selectedWorker.Name</strong> için </text>
                            }
                        }
                        randevu bulunmamaktadır.
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .calendar-table td {
        position: relative;
        height: 40px;
        padding: 5px !important;
    }
    .calendar-day a {
        display: block;
        width: 100%;
        height: 100%;
    }
    .calendar-day:hover {
        background-color: #e9ecef;
    }
    .badge-sm {
        padding: 0.15em 0.4em;
    }
</style>

@section Scripts {
    <script>
        function filterByWorker() {
            var workerId = document.getElementById('workerFilter').value;
            var currentUrl = new URL(window.location.href);
            if (workerId) {
                currentUrl.searchParams.set('workerId', workerId);
            } else {
                currentUrl.searchParams.delete('workerId');
            }
            window.location.href = currentUrl.toString();
        }
    </script>
}
